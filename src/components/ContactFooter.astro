<div class="footer-wrapper">
  <div class="contact-box-container">
    <div class="contact-box">
      <h3>Fale conosco!</h3>
      <ul>
        <li>
          <img src="/icons/phone.svg" alt="Ícone de telefone" />
          <a href="tel:+5585999999999">(85) 9 9999-9999</a>
        </li>
        <li>
          <img src="/icons/envelope.svg" alt="Ícone de email" />
          <a href="mailto:contato@dpestrategico.com.br">contato@dpestrategico.com.br</a>
        </li>
      </ul>
    </div>
  </div>

  <footer class="main-footer">
    <div class="footer-logo">DP Estratégico</div>
    <div class="footer-subtext">CNPJ: 00.000.000/0001-00</div>
    <div class="footer-socials">
      <a href="#" aria-label="Instagram">Instagram</a>
      <span>&bull;</span>
      <a href="#" aria-label="LinkedIn">LinkedIn</a>
    </div>
  </footer>

  <div class="sub-footer">
    <p>© 2025 Todos os Direitos Reservados</p>
  </div>
</div>

<style>
  .footer-wrapper {
    position: relative;
    background-color: #FFFAEE; /* Bege claro */
    padding-top: 100px;
  }
  .contact-box-container {
    position: absolute;
    top: 0;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 90%;
    max-width: 800px;
  }
  .contact-box {
    background-color: white;
    color: #3E646F;
    padding: 2.5rem;
    border-radius: 0.5rem;
    box-shadow: 0 10px 25px rgba(62, 100, 111, 0.1);
    text-align: center;
    border: 1px solid #72939822;
  }
  .contact-box h3 {
    font-family: 'Playfair Display', serif;
    font-size: 2rem;
    margin-bottom: 1.5rem;
  }
  .contact-box ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
  }
  .contact-box li {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }
  .contact-box li img {
    width: 1.5rem;
    height: 1.5rem;
    filter: invert(39%) sepia(13%) saturate(1249%) hue-rotate(152deg) brightness(94%) contrast(86%);
  }
  .contact-box a {
    font-family: 'Lato', sans-serif;
    color: #3D636E;
    text-decoration: none;
    font-size: 1.125rem;
  }
  .contact-box a:hover {
    text-decoration: underline;
  }

  .main-footer {
    padding: 4rem 1rem 2rem 1rem;
    text-align: center;
    color: #3E646F;
  }
  .footer-logo {
    font-family: 'Playfair Display', serif;
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
  }
  .footer-subtext, .footer-socials {
    font-family: 'Lato', sans-serif;
    color: #729398;
  }
  .footer-socials {
    margin-top: 1rem;
    display: flex;
    gap: 0.5rem;
    justify-content: center;
  }
  .footer-socials a {
    color: #729398;
    text-decoration: none;
  }
  .footer-socials a:hover {
    text-decoration: underline;
  }
  .sub-footer {
    background-color: #3E646F;
    color: #FFFAEE;
    text-align: center;
    padding: 0.75rem 1rem;
    font-family: 'Lato', sans-serif;
    font-size: 0.875rem;
  }

  @media(min-width: 768px) {
    .contact-box ul {
      flex-direction: row;
      justify-content: center;
      gap: 2rem;
    }
    .footer-wrapper {
      padding-top: 80px; 
    }
  }
</style>